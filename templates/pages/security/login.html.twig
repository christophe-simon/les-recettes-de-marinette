{% extends 'base.html.twig' %}

{% block title %}Les recettes de Marinette - Connexion{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Formulaire de connexion</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action={{ path('app_security_login') }} method="post">
            <div>
                <label for="username" class="form-label mt-4">Adresse email</label>
                <input type="email" class="form-control" id="username" name="username" aria-describedby="aideEmail" placeholder="Indiquez votre adresse email">
                <small id="aideEmail" class="form-text text-muted">Nous ne partagerons jamais votre email avec personne.</small>
            </div>
            <div>
                <label for="password" class="form-label mt-4">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Indiquez votre mot de passe" autocomplete="off">
            </div>
            <div>
                <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
            </div>
        </form>
    </div>
{% endblock %}
